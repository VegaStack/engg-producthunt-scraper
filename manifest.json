{
  "manifest_version": 3,
  "name": "ProductHunt Scraper - Free, No API key required",
  "version": "1.0.1",
  "description": "Extract ProductHunt leaderboards to CSV instantly - no API required, completely free",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.producthunt.com/*",
    "https://producthunt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["url-analyzer.js", "styles.css"],
      "matches": [
        "https://www.producthunt.com/*",
        "https://producthunt.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}